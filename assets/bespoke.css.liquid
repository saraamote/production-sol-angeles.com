/*********
header
*********/

.main-content {

  padding-top: 90px;

}

/* social and search */

.bespoke-social {

  position: absolute;
  right: 50px;
  top: 19px;

}

.bespoke-social a {

  vertical-align: middle;
  color: #777777;
  font-size: 22px;
  margin: 0 5px;

}

.bespoke-social a.search {

  font-size: 16px;
  margin-left: 10px;

}

/* hide default menu */

.main-header .bottom-row .menu-container,
.main-header .top.row,
.main-header .cart {

  display: none;

}

.main-header .bottom-row {

  padding: 0;

}

/* mobile menu */

.main-header .mobile-tools a {

  color: #777777;

}

.main-header .mobile-tools {

  position: absolute;
  display: block;
  right: 0;
  top: 0;

}

.main-header .mobile-menu {

  text-transform: uppercase;
  text-align: right;

}

.main-header .mobile-menu .nav-item:nth-child(1) a {

  padding-top: 65px;

}

.main-header .mobile-menu .nav-item a {

  padding: 10px 22px;
  width: 100%;

}

.main-header h1.title {

  text-align: center;

}

.bespoke-logo {

  position: absolute;
  max-width: 200px;
  margin: 10px auto;
  right: 0;
  left: 0;

}


/*********
homepage
*********/

/* featured collection */

.bespoke.product-grid {

  text-align: center;
  padding-top: 20px;
  font-size: 0;
  width: 100%;

}

.bespoke.product-grid .price,
.bespoke.product-grid .title {

  text-transform: none;
  padding: 0 0 0 10px;
  line-height: 1.5;
  text-align: left;
  font-size: 12px;
  margin: 0;

}

.bespoke.product-grid .product-item {

  display: inline-block;
  margin: 2.5% .5% 1.5% .5%;
  vertical-align: top;
  font-size: initial;
  width: 18.8%;
  float: none;

  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  -moz-box-shadow: 0px 10px 16px rgba(0,0,0,0.1);
  box-shadow: 0px 10px 16px rgba(0,0,0,0.1);

}

.bespoke.product-grid .image-wrapper {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;
  border: 1px solid #f3f3f3;

}

.bespoke.product-grid .image-wrapper img {

  -webkit-border-top-left-radius: 4px;
  -moz-border-top-left-radius: 4px;
  border-top-left-radius: 4px;
  -webkit-border-top-right-radius: 4px;
  -moz-border-top-right-radius: 4px;
  border-top-right-radius: 4px;

}

/* sold out text */

.bespoke.product-grid .circle {

  text-transform: uppercase;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  position: absolute;
  border-radius: 0;
  text-align: left;
  display: block;
  background: none;
  line-height: 1.5;
  z-index: 1;
  padding: 0;
  top: 100%;
  right: auto;
  height: 30px;
  width: 100%;

}

.bespoke.product-grid .caption {

  margin: 25px 0 10px 0;

}

.bespoke.product-grid .circle.buy span {

  color: #a79764;

}

.bespoke.product-grid .circle.sale span {

  color: #fece00;

}

.bespoke.product-grid .circle.sold-out span {

  color: #999999;

}



.bespoke.product-grid .circle span {

  margin-left: 10px;
  max-width: 100%;
  font-size: 13px;
  line-height: 1.5;

}

/* browse more */

.browse-more a {

  width: 310px;
  margin: 50px auto;
  text-transform: uppercase;
  font-size: 14px;
  padding: 14px 40px;
  display: block;
  color: #fff;
  background: #a4905e;
  font-weight: bold;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-transition-property: background-color;
  -webkit-transition-duration: 0.1s;
  -webkit-transition-timing-function: ease-in;
  -webkit-transition-delay: 0;
  -moz-transition-property: background-color;
  -moz-transition-duration: 0.1s;
  -moz-transition-timing-function: ease-in;
  -moz-transition-delay: 0;
  -o-transition-property: background-color;
  -o-transition-duration: 0.1s;
  -o-transition-timing-function: ease-in;
  -o-transition-delay: 0;
  -ms-transition-property: background-color;
  -ms-transition-duration: 0.1s;
  -ms-transition-timing-function: ease-in;
  -ms-transition-delay: 0;
  transition-property: background-color;
  transition-duration: 0.1s;
  transition-timing-function: ease-in;
  transition-delay: 0;

}

.browse-more a:hover {

  background: #877853;

}

/* featured linklist */

.bespoke-featured-links {

  text-transform: uppercase;
  text-align: center;
  font-size: 18px;

}

.bespoke-featured-links h3 {

  font-weight: bold;
  padding: 20px 0;
  margin: 0;

}

.bespoke-featured-links ul {

  border-bottom: 2px solid #000;
  border-top: 2px solid #000;
  list-style: none;
  padding: 0;
  margin: 0;

}

.bespoke-featured-links ul li {

  display: inline-block;
  position: relative;
  line-height: 45px;
  padding: 0 30px;
  font-weight: 100;

}

.bespoke-featured-links ul li:after {

  position: absolute;
  content: '-';
  bottom: 0;
  right: 0;
  top: 0;

}


/* instagram widget */

.template-index .instagram-widget h3 {

  display: none;

}

.template-index .instagram-widget .items.wide {

  max-width: none;
  max-height: none;
  width: 100%;

}

.template-index .instagram-widget .items .item {

  margin: .25% .5% .5% .5%;
  max-width: none;
  width: 15.66%;

}

.template-index .instagram-widget .items .item img {

  width: 100%;

}

.template-index .instagram-widget .items .item:nth-of-type( 1 ) {

  position: absolute;
  width: 31%;

}

.template-index .instagram-widget .items .item:nth-of-type( 2 ),
.template-index .instagram-widget .items .item:nth-of-type( 6 ) {

  margin-left: 33.5%;

}

.template-index .instagram-widget .items .item:nth-of-type( 10 ),
.template-index .instagram-widget .items .item:nth-of-type( 11 ),
.template-index .instagram-widget .items .item:nth-of-type( 12 ) {

  display: none;

}

/*********
media queries
*********/

/* logo */

@media (max-width: 610px) {

  .bespoke-logo {

    right: auto;
    left: 5%;

  }

}

/* frontpage */

@media (max-width: 980px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      width: 24%;

  }

}

@media only screen and (min-width: 768px) {

  .template-index .product-slider {

    padding-top: 25px;
    padding-bottom: 75px;

  }

}

@media (max-width: 768px) {

  .bespoke.product-grid .product-item {

      display: inline-block;
      width: 32.33%;

  }

}

@media only screen and (min-width: 768px) {

  main-header .mobile-menu {
display: none;
}

}

@media only screen and (min-width: 768px) {

  .template-index .widgets .row {

    padding: 30px 10px 0;

  }
}
